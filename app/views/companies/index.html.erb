<div class="container py-5">
  <h3>Companies</h3>
  <%= link_to "+ Create a Company", new_company_path %><br>
  <% if @companies.empty? %>
  <p>No Companies Found</p>
  <% else %>
    <ul class="list-group my-5 ">

      <% @companies.each do |company| %>
      <div class="row"> 
        <div class="col-md-11">
        <a href="<%= company_path(company) %>" class="list-group-item list-group-item-action">
          <%= company.name %>
        </a>
      </div>
        
        <div class="col-md-1 text-right" style="margin-top: 5px">
           <%= link_to "Delete", company_path(company), method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you Sure?'}, title: "Delete #{@company}"%>
        </div>
      </div>
      <% end %>
    </ul>
  <% end %>
</div>
